{
    "pluginAlias": "AdvancedThermostat",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "required": true
        },
        "modes": {
          "title": "Supported Modes",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "heat",
              "cool"
            ]
          },
          "default": [ "heat" ],
          "required": true
        },
        "power" : {
          "title": "Power",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "heat": {
              "title": "Heating",
              "description": "Power available for heating",
              "type": "number"
            },
            "cool": {
              "title": "Cooling",
              "description": "Power available for cooling",
              "type": "number"
            }
          }
        },
        "pid": {
          "title": "PID Control",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "cP": {
              "title": "P",
              "description": "Proportional coefficient",
              "type": "number",
              "default": 0.2,
              "required": true
            },
            "cI": {
              "title": "I",
              "description": "Integral coefficient",
              "type": "number",
              "default": 0.01,
              "required": true
            },
            "cD": {
              "title": "D",
              "description": "Differential coefficient",
              "type": "number",
              "default": 1,
              "required": true
            }
          }
        },
        "modulation": {
          "title": "Modulation",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "budgetThreshold": {
              "title": "Budget Threshold",
              "description": "The amount of heating/cooling budget in minutes required before turning on heating/cooling.",
              "type": "number",
              "default": 5,
              "required": true
            }
          }
        },
        "dataLog": {
          "title": "Data Logging",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "minimumUpdateInterval": {
              "title": "Maximum Data Point Interval",
              "description": "The maximum interval in minutes between two data points.",
              "type": "number",
              "required": false
            },
            "influx": {
              "title": "Influx DB",
              "type": "object",
              "expandable": true,
              "expanded": false,
              "properties": {
                "host": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                },
                "org": {
                  "type": "string"
                },
                "bucket": {
                  "type": "string"
                },
                "measurements": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "string",
                    "enum": [
                      "thermostat",
                      "thermostat-pid",
                      "thermostat-budget"
                    ]
                  }
                },
                "tags": {
                  "type": "array",
                  "expandable": true,
                  "expanded": false,
                  "items": {
                    "type": "object",
                    "title": "Tag",
                    "properties": {
                      "name": {
                        "type": "string",
                        "required": true
                      },
                      "value": {
                        "type": "string",
                        "required": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }