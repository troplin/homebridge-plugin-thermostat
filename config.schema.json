{
    "pluginAlias": "AdvancedThermostat",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "required": true
        },
        "power" : {
          "title": "Power",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "heat": {
              "title": "Heating",
              "description": "Power available for heating [W]",
              "type": "number",
              "required": true
            },
            "cool": {
              "title": "Cooling",
              "description": "Power available for cooling [W]",
              "type": "number",
              "default": 0,
              "required": true
            }
          }
        },
        "pid": {
          "title": "PID Control",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "cP": {
              "title": "P",
              "description": "Proportional coefficient [W / °C]",
              "type": "number",
              "default": 1000,
              "required": true
            },
            "cI": {
              "title": "I",
              "description": "Integral coefficient [W / s°C]",
              "type": "number",
              "default": 0.03,
              "required": true
            },
            "cD": {
              "title": "D",
              "description": "Differential coefficient [J / °C]",
              "type": "number",
              "default": 700000,
              "required": true
            },
            "k": {
              "title": "Overshoot Compensation",
              "description": "Coefficient compensating for overshoot when changing target temperature. [W]",
              "type": "number",
              "default": 0,
              "required": true
            }
          }
        },
        "modulation": {
          "title": "Modulation",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "budgetThreshold": {
              "title": "Budget Threshold",
              "description": "The amount of heating/cooling budget required before turning on heating/cooling. [J]",
              "type": "number",
              "default": 75000,
              "required": true
            }
          }
        },
        "dataLog": {
          "title": "Data Logging",
          "type": "object",
          "expandable": true,
          "expanded": false,
          "properties": {
            "minimumUpdateInterval": {
              "title": "Maximum Data Point Interval",
              "description": "The maximum interval between two data points. [s]",
              "type": "number",
              "required": false
            },
            "influx": {
              "title": "Influx DB",
              "type": "object",
              "expandable": true,
              "expanded": false,
              "properties": {
                "host": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                },
                "org": {
                  "type": "string"
                },
                "bucket": {
                  "type": "string"
                },
                "measurements": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "string",
                    "enum": [
                      "thermostat",
                      "thermostat-pid",
                      "thermostat-budget"
                    ]
                  }
                },
                "tags": {
                  "type": "array",
                  "expandable": true,
                  "expanded": false,
                  "items": {
                    "type": "object",
                    "title": "Tag",
                    "properties": {
                      "name": {
                        "type": "string",
                        "required": true
                      },
                      "value": {
                        "type": "string",
                        "required": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }